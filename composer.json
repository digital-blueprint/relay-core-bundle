{
    "name": "dbp/relay-core-bundle",
    "description": "The core bundle of the Relay API gateway",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": "^7.3 || ^8.0",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "api-platform/core": "^2.6.8 <2.7.0",
        "doctrine/annotations": "^1.0",
        "dragonmantank/cron-expression": "^3.1",
        "guzzlehttp/guzzle": "^7.0",
        "kevinrob/guzzle-cache-middleware": "^4.0",
        "league/uri": "^6.5",
        "nelmio/cors-bundle": "^2.1.0",
        "phpdocumentor/reflection-docblock": "^3.0 || ^4.0 || ^5.0",
        "symfony/asset": "^5.3",
        "symfony/config": "^5.3",
        "symfony/event-dispatcher": "^5.3",
        "symfony/expression-language": "^5.3",
        "symfony/framework-bundle": "^5.4",
        "symfony/lock": "^5.4",
        "symfony/messenger": "^5.3",
        "symfony/mime": "^5.3",
        "symfony/security-bundle": "^5.3",
        "symfony/security-core": "^5.3",
        "symfony/security-guard": "^5.3",
        "symfony/twig-bundle": "^5.3",
        "symfony/uid": "^5.4",
        "symfony/validator": "^5.3",
        "symfony/yaml": "^5.3"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8.5",
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpstan/phpstan": "^1.8.5",
        "phpstan/phpstan-phpunit": "^1.1.1",
        "phpstan/phpstan-symfony": "^1.2.13",
        "phpunit/phpunit": "^9.5.24",
        "symfony/browser-kit": "^5.4.11",
        "symfony/http-client": "^5.4.12",
        "symfony/phpunit-bridge": "^5.4.11",
        "vimeo/psalm": "^4.27"
    },
    "conflict": {
        "symfony/dependency-injection": "5.3.7"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\CoreBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "Dbp\\Relay\\CoreBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
          "php": "7.3"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer lint"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update",
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
