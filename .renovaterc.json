{
  "extends": [
    "config:base",
    "group:allNonMajor",
    "schedule:weekends",
    ":automergePatch"
  ],
  "ignorePresets": [":prHourlyLimit2"],
  "rangeStrategy": "update-lockfile",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackagePrefixes": ["symfony/"],
      "allowedVersions": "<6"
    },
    {
      "matchPackageNames": ["api-platform/core"],
      "allowedVersions": "<2.7"
    },
    {
      "matchPackageNames": ["friendsofphp/php-cs-fixer"],
      "allowedVersions": "<=3.4.0"
    }
  ],
  "js": {
    "enabled": false
  }
}